{
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.*",
    "__tests__/**/*",
    "dist/**/*",
    "coverage/**/*"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/esm",
    "declarationDir": "./dist/types",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "incremental": true,
    "composite": true,
    "sourceMap": false,
    "inlineSourceMap": true
  }
}
